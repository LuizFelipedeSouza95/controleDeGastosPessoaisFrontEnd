<!DOCTYPE html>
<html lang="en">
    
    <head>
        <meta charset="UTF-8">
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
        <!-- <script src="https://kit.fontawesome.com/1ab94d0eba.js" crossorigin="anonymous"></script> -->
        <link rel="stylesheet" href="../css/stylesPageInitial.css">
        <title>Controle de Gastos</title>
      </head>

  <body id="body-pag-inicial">

    <main class="container">

            <div id="formCreate">
    
                <h2>Create Account</h2>
                <form class="formCreate" id="formCreate">
                    <label class="label-input" for="">
                        <i class="far fa-user icon-modify"></i>
                        <div class="form-floating">
                            <input id="nameCreate" type="Name" className="email" class="form-control" placeholder="Email">
                            <label for="nameCreate">Name</label>
                        </div>
                    </label>
                    <div id="returnErrorNameCreate" class="returnErrors mb-3"></div>

                    <label class="label-input" for="">
                        <i class="far fa-envelope icon-modify"></i>
                        <div class="form-floating">
                            <input id="emailCreate" name="email" type="email" class="form-control" placeholder="Email">
                            <label for="inputEmailCreate">Email</label>
                        </div>
                    </label>
                    <div id="returnErrorEmailCreate" class="returnErrors mb-3"></div>

                    <label class="label-input" for="">
                        <i class="fas fa-lock icon-modify"></i>
                        <div class="form-floating">
                            <input id="passwordCreate" type="password" class="form-control" placeholder="Password">
                            <label for="passwordCreate">Password</label>
                        </div>
                    </label>
                    <div id="returnErrorPasswordCreate" class="returnErrors mb-3"></div>

                    <div id="returnSuccessCreate"></div>
                    
                    <button type="button" class="btn_signUp" id="btn_Create" onclick="{createUser()}">Create Account</button>
                </form>

            </div>
            
            <script>
                const labelInputName = document.querySelector('#nameCreate');
                const returnErrorName = document.querySelector('#returnErrorNameCreate');
                labelInputName.addEventListener('click', function() {
                    returnErrorName.innerHTML = '';
                });
    
                const labelInputEmail = document.querySelector('#emailCreate');
                const returnErrorEmail = document.querySelector('#returnErrorEmailCreate');
                labelInputEmail.addEventListener('click', function() {
                    returnErrorEmail.innerHTML = '';
                });

                const labelInputPassword = document.querySelector('#passwordCreate');
                const returnErrorPassword = document.querySelector('#returnErrorPasswordCreate');
                labelInputPassword.addEventListener('click', function() {
                    returnErrorPassword.innerHTML = '';
                });
            </script>
            <script src="../../js/createUser.js"></script>
    </main>
  </body>
</html>