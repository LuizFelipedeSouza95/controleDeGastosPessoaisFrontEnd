    <div id="divDados" class="row">
      
      <div class="col-12 col-md-2 text-center">
          <p class="titles-info mb-0">Saldo</p>
          <div class="shadow-lg p-4 rounded">R$1.000,00</div>
      </div>

      <div class="col-12 col-md-2 text-center">
          <p class="titles-info mb-0">A Pagar</p>
          <div class="shadow-lg p-4 rounded">R$1.500,00</div>
      </div>

      <div class="col-12 col-md-2 text-center mb-2">
            <p class="titles-info mb-0">Receita</p>
            <div class="shadow-lg p-4 rounded">R$2.000,00</div>
      </div>

      <table  id="table" class="table table-hover ">
        <thead>
          <tr>
            <th scope="col">Descrição</th>
            <th scope="col">Valor</th>
            <th scope="col">Data Vencimento</th>
            <th scope="col">Data Pagamento</th>
            <th scope="col">Pago?</th>
          </tr>
        </thead>
        <tbody>
          <tr>
            <td>Carro</td>
            <td>R$ 1.180,50</td>
            <td>18/03/2023</td>
            <td>18/03/2023</td>
            <td><input type="checkbox" name="pago"></td>
          </tr>
          <tr>
            <td>Internet</td>
            <td>R$ 160,00</td>
            <td>06/03/2023</td>
            <td>06/03/2023</td>
            <td><input type="checkbox" name="pago"></td>
          </tr>
          <tr>
            <td>Cartão</td>
            <td>R$ 120,00</td>
            <td>05/03/2023</td>
            <td>05/03/2023</td>
            <td><input type="checkbox" name="pago"></td>
          </tr>
        </tbody>
      </table>
